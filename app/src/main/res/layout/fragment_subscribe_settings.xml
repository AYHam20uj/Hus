<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecard"
    tools:context=".view.fragments.setting.group.SubscribeSettingsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Default Subscribe Settings"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:id="@+id/heading"
        android:textColor="@color/ST_BLUE_DARK"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/rectangular_rounded"
        android:layout_marginLeft="15dp"
        android:id="@+id/modelBox"
        android:layout_below="@id/heading"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Model ID"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginRight="8dp"
            android:textColor="@color/ST_BLUE_DARK"
            android:layout_toLeftOf="@id/modelEdit">

        </TextView>

        <EditText
            android:layout_width="150dp"
            android:padding="4dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:id="@+id/modelEdit"
            android:imeOptions="actionNext"
            android:background="@drawable/round_background"
            android:layout_height="36dp">
        </EditText>

    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/modelBox"
        android:layout_marginTop="50dp"
        android:text="Done"
        android:id="@+id/doneBtn"
        android:textColor="@color/ST_BLUE_DARK"
        android:layout_marginLeft="15dp"
        android:background="@color/colorGrey"
        android:layout_marginRight="15dp"></Button>

</RelativeLayout>
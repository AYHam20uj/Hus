<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/color_app_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/ST_BLUE_DARK"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Exchange Configuration"
        android:layout_marginTop="35dp"/>

    <Button
        android:id="@+id/via_cloud_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="via Cloud"
        android:textColor="@color/ST_BLUE_DARK"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/round_model_background"
        android:backgroundTint="@color/color_gray_light4"
        android:textAllCaps="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/st_background_gray"
                android:layout_marginTop="45dp"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/ST_BLUE_DARK"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="via Applications"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/import_config_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Configuration"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@color/ST_BLUE_DARK"
        android:background="@drawable/round_model_background"
        android:backgroundTint="@color/color_gray_light4"
        android:textAllCaps="false"/>

    <Button
    android:id="@+id/export_config_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Export Configuration"
    android:layout_marginTop="10sp"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:textColor="@color/ST_BLUE_DARK"
    android:background="@drawable/round_model_background"
    android:backgroundTint="@color/color_gray_light4"
    android:textAllCaps="false"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/ST_BLUE_DARK"
                android:textSize="20sp"
                android:visibility="gone"
                android:text="via Bluetooth"
                android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/discovery_enable_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make discoverable"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        android:textColor="@color/ST_BLUE_DARK"
        android:background="@drawable/round_model_background"
        android:backgroundTint="@color/color_gray_light4"
        android:textAllCaps="false"/>

            <Button
                android:id="@+id/sendDataToPairedDevices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start scanning"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:visibility="gone"
                android:textColor="@color/ST_BLUE_DARK"
                android:background="@drawable/round_model_background"
                android:backgroundTint="@color/color_gray_light4"
                android:textAllCaps="false"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/st_background_gray"
                android:layout_marginTop="45dp"></View>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/ST_BLUE_DARK"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Delete Current Network"
                />

    <Button
        android:id="@+id/delete_config_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Configuration"
        android:textColor="@color/Red"
        android:layout_gravity="end"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="25sp"
        android:background="@drawable/round_model_background"
        android:backgroundTint="@color/color_gray_light4"
        android:textAllCaps="false"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>